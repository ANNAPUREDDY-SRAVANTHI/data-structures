#include<stdio.h>
 int main()
 {
     int a[50],i,n,pos,val;
     printf("enter n");
     scanf("%d",&n);
     printf("enter the array elements");
     for(i=0;i<n;i++)
     scanf("%d",&a[i]);
     printf("enter the pos and value");
     scanf("%d%d",&pos,&val);
     for(i=n;i>pos;i--)
     a[i]=a[i-1];
     a[pos]=val;
     printf("output is");
     for(i=0;i<=n;i++)
     printf("%d\t",a[i]);
     return 0;
 }
